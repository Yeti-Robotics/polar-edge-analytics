{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
      "plugins": [
        {
          "name": "next"
        },
      ],
      "paths": {
        "@/*": ["./*"],
        "@components/*": ["./lib/components/*"]
      }
    },
    "include": [
      "next-env.d.ts",
      "next.config.mjs",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }
  